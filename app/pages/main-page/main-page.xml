
<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
    <GridLayout rows="auto,*">
        <StackLayout cssClass="page-header">
            <Label text="Header" cssClass="page-title bold" horizontalAlignment="center" margin="15"/>
        </StackLayout>
        <GridLayout rows="auto,*" row="1">
            <ListView items="{{sessions}}" class="sessions-grid">
                <ListView.itemTemplate>
                    <GridLayout columns="auto, *">
                        <GridLayout columns="auto" rows="auto" cssClass="favourite-wrap"
                            tap="toggleFavourite">
                            <Image id="imgFav" stretch="none" cssClass="icon-image" src="{{favorite ? 'res://ic_add_to_fav_1' : 'res://ic_add_to_fav'}}"></Image>
                        </GridLayout>

                        <StackLayout col="1">
                            <Label text="{{title}}" textWrap="true" cssClass="info-bigger"/>
                            <Label text="{{room}}" cssClass="info-orange"/>
                        </StackLayout>
                    </GridLayout>

                </ListView.itemTemplate>
            </ListView>
        </GridLayout>
    </GridLayout>
</Page>
